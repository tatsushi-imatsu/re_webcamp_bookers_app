
<h1>Books</h1>
<!-- 何か入る-->
<table>
    <thead>
        <tr>
            <th>title</th>
            <th>body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show",  book_path(book) %></td>
            <td><%= link_to "Edit",  edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" }  %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<!-- 何か入る-->

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>
<%= render 'layouts/error_messages', book: @book %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %>

<% end %>
